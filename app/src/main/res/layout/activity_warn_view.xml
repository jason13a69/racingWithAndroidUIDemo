<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarnViewActivity">

    <LinearLayout
        android:layout_width="433dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="55dp"
            android:src="?android:attr/colorFocusedHighlight" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="373dp"
            android:layout_height="66dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="This device is designed to use on racing\n tracks. For Safety purpose do not operate on\n ordinary road."
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="273dp"
            android:layout_height="31dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape"
            android:onClick="agreeClick"
            android:text="I agree and start app"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_dark" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>